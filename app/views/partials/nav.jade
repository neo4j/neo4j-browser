#nav(ng-if="show.sidebar")
  ul.nav.list-group
    //- li.nav-header(ng-class='{active: showingDrawer("database") }')
    //-   .cover(ng-click='toggleDrawer("database")')
    //-   a Neo4j
    //-     .logo(fancy-logo ng-class='{loading: currentFrame.isLoading}')
    //-       .ball.one
    //-       .ball.two
    //-       .ball.three
    li(ng-class='{active: showingDrawer("database") }', tooltip='Database',tooltip-placement='right', tooltip-enable='!showingDrawer("database")')
      a.database.sl.sl-database(ng-click='toggleDrawer("database")')
    li(ng-class='{active: showingDrawer("scripts") }', tooltip='Favorites',tooltip-placement='right', tooltip-enable='!showingDrawer("scripts")')
      a.favorites.sl.sl-star(ng-click='toggleDrawer("scripts")')
    li(ng-class='{active: showingDrawer("info") }', tooltip='Documentation',tooltip-placement='right', tooltip-enable='!showingDrawer("info")')
      a.guides.sl.sl-book(ng-click='toggleDrawer("info")')
  ul.nav.bottom
    li.nav-user(ng-class='{active: showingDrawer("profile") }', tooltip='Cloud Services',tooltip-placement='right', tooltip-enable='!showingDrawer("profile")')
      a.cloud(ng-click='toggleDrawer("profile")')
        .avatar(ng-style='{"background-image": "url("+currentUser.picture+")"}', ng-if='currentUser.picture && syncService.hasConnection') &nbsp;
        i.sl.sl-cloud(style="", ng-if='syncService.hasConnection')
        i.sl.sl-cloud-delete.error(style="", ng-if='!syncService.hasConnection')
    li(ng-class='{active: showingDrawer("preferences") }', tooltip='Browser Settings', tooltip-placement='right', tooltip-enable='!showingDrawer("preferences")')
      a.preferences.sl.sl-setting-gear(ng-click='toggleDrawer("preferences")')
    li(ng-class='{active: showingDrawer("credits") }', tooltip='About Neo4j',tooltip-placement='right', tooltip-enable='!showingDrawer("credits")')
      a.credits.nw.nw-neo4j-outline-32px(ng-click='toggleDrawer("credits")')
