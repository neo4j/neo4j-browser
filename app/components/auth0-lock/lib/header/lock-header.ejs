<div class="a0-header a0-top-header <%= locals.embedded ? 'a0-hide' : ''%>">

    <div class="a0-bg-gradient"></div>

    <div class="a0-icon-container">
      <div class="a0-image <%= options.icon ? '' : 'a0-hide' %>">
          <img src="<%= options.icon || '' %>">
      </div>

      <div class="a0-avatar <%= !options.icon ? '' : 'a0-hide' %>">
          <i class="a0-avatar-guest a0-icon-budicon-2"></i>
      </div>
    </div>

    <h1><%= options.i18n.t('signin:title') %></h1>
    <h2 class="a0-error a0-hide">&nbsp;</h2>
    <h2 class="a0-success a0-hide">&nbsp;</h2>

    <!-- if standalone, you shouldn't be able to close the widget -->
    <a class="a0-close a0-icon-budicon-3 <%= options.closable ? '' : 'a0-hide' %>" href="#"></a>
</div>
