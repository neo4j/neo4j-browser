<div class="a0-loading a0-mode">
    <% if (locals.alt_spinner) { %>
    <div class="a0-spinner a0-spin-img" style="background-image: url('<%= locals.alt_spinner %>')"></div>
    <% } else { %>
    <div class="a0-spinner a0-spin-container">
        <div class="a0-spinner-css">
          <span class="a0-side a0-sp_left">
            <span class="a0-fill"></span>
          </span>
          <span class="a0-side a0-sp_right">
            <span class="a0-fill"></span>
          </span>
        </div>
        <div class="a0-spin-message">
            <span>&nbsp;</span>
        </div>
    </div>
    <% } %>
</div>
