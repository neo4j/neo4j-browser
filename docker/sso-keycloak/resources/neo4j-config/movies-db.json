{
  "kind": "Database",
  "name": "movies",
  "dropIfExists": true,
  "skipCreate": false,
  "indexes": {
    "fulltext": [
      {
        "labels": ["Person"],
        "properties": ["name"],
        "name": "Person"
      }
    ]
  },
  "constraints": {
    "unique": [
      {
        "label": "Movie",
        "property": "title"
      }
    ]
  },
  "seeds": ["movies.cypher"]
}
